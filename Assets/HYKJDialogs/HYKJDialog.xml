<CanvasWidget xmlns="runtime-namespace:Game" Margin="0,10">

	<CanvasWidget Size="420, 550" HorizontalAlignment="Center" VerticalAlignment="Center">

		<RectangleWidget FillColor="80, 80, 80, 25" OutlineColor="120, 120, 120, 160" OutlineThickness="2" />

		<StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 5">

			<StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <CanvasWidget Size="400, 40" HorizontalAlignment="Center" VerticalAlignment="Center">
          <LabelWidget Name="TitleLabel" Text="" Margin="5, 5" HorizontalAlignment="Center"/>
        </CanvasWidget>
			</StackPanelWidget>

			<CanvasWidget Size="420, 470" Margin="20, 3">

				<RectangleWidget FillColor="255, 255, 255, 255" OutlineColor="20, 20, 20, 128" OutlineThickness="1" />

				<ScrollPanelWidget Name="ScrollPanel" Direction="Vertical" Margin="3, 3" ClampToBounds="true">
					<CanvasWidget HorizontalAlignment="Center" VerticalAlignment="Center">
						<StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" Margin="10, 0" >
                            <LabelWidget FontScale="0.8" Text="" HorizontalAlignment="Center" Color="64, 192, 64" DropShadow="true" />
					  	    <RectangleWidget Size="600, 170" OutlineColor="0, 0, 0, 0" HorizontalAlignment="Center" FillColor="255, 255, 255" Margin="0, 0" Subtexture="{Textures/Gui/hy}" />
					  	<StackPanelWidget HorizontalAlignment="Center">
							<LabelWidget FontScale="0.8" Text="加入QQ群  " HorizontalAlignment="Center" Color="64, 192, 64" DropShadow="true" />
                            <LabelWidget FontScale="0.8" Text="查看帮助" HorizontalAlignment="Center" Color="64, 192, 64" DropShadow="true" />
                        </StackPanelWidget>
                            <LabelWidget FontScale="0.8" Text="" HorizontalAlignment="Center" Color="64, 192, 64" DropShadow="true" />
                        <StackPanelWidget HorizontalAlignment="Center">
                            <LabelWidget FontScale="0.8" Text="下载最新版本  " HorizontalAlignment="Center" Color="64, 192, 64" DropShadow="true" />
                            <LabelWidget FontScale="0.8" Text="提供意见" HorizontalAlignment="Center" Color="64, 192, 64" DropShadow="true" />
                        </StackPanelWidget>
                            <LabelWidget FontScale="0.8" Text="—————————————————" HorizontalAlignment="Center" Color="255, 255, 255" DropShadow="true" />
                            <LabelWidget Name="ContentLabel" Text=""  Color="255,255,255" HorizontalAlignment="Center" TextAnchor="HorizontalCenter" WordWrap="true" />
                        <StackPanelWidget HorizontalAlignment="Center" >
				            <BevelledButtonWidget Style="{Styles/ButtonStyle_160x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Text="简介" />
				            <BevelledButtonWidget Style="{Styles/ButtonStyle_160x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Text="剧情" />
			            </StackPanelWidget>
			            <StackPanelWidget HorizontalAlignment="Center">
			             	<BevelledButtonWidget Style="{Styles/ButtonStyle_160x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Text="鸣谢" />
			             	<BevelledButtonWidget Style="{Styles/ButtonStyle_160x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Text="制作组" />
			            </StackPanelWidget>
                            <LabelWidget Name="ContentLabel" Text=""  Color="255,255,255" HorizontalAlignment="Center" TextAnchor="HorizontalCenter" WordWrap="true" />
						</StackPanelWidget>
					</CanvasWidget>
				</ScrollPanelWidget>

			</CanvasWidget>

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
      
		<CanvasWidget Size="405, 40">
          <LabelWidget Name="Time" Text="" Margin="5, 5"/>
        </CanvasWidget>
        
        <CanvasWidget Size="50, 40">
          <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Near" VerticalAlignment="Far">
            <BevelledButtonWidget Name="OkButton" Size="80, 40" VerticalAlignment="Center" HorizontalAlignment="Near" Margin="0, 3">
              <RectangleWidget FillColor="100, 100, 100, 255" OutlineColor="120, 120, 120, 255" IsVisible="true"/>
              <LabelWidget Name="ButtonLabel" Text="" Font="{Fonts/Pericles}" HorizontalAlignment="Center" VerticalAlignment="Center" Color="255, 255, 255, 255" IsVisible="true"/>
            </BevelledButtonWidget>
          </StackPanelWidget>
        </CanvasWidget>

      </StackPanelWidget>


    </StackPanelWidget>
    
	</CanvasWidget>

</CanvasWidget>

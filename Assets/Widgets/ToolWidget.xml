          </StackPanelWidget>
          <!--右边栈界面，方向为竖直-->
          <StackPanelWidget Name="RightStack" Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <BevelledButtonWidget Text="关于更新" Size="230,60" HorizontalAlignment="Center" VerticalAlignment="Center" />

            <BevelledButtonWidget Name="Button8" Text="加群" IsEnabled="false" Size="180,60" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <BevelledButtonWidget Name="Button9" Text="开发者模式" IsEnabled="false" Size="180,60" HorizontalAlignment="Center" VerticalAlignment="Center" />

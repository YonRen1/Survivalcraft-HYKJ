<CanvasWidget xmlns="runtime-namespace:Game" Margin="0,10">
	<CanvasWidget Size="380, 500" HorizontalAlignment="Center" VerticalAlignment="Center">
		<BevelledRectangleWidget DirectionalLight="0" AmbientLight="1" BevelColor="120, 120, 120, 160" CenterColor="80, 80, 80, 25" BevelSize="3" RoundingRadius="10" RoundingCount="2" />
		<StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 5">
			<StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <CanvasWidget Size="370, 35" HorizontalAlignment="Center" VerticalAlignment="Center">
                     <LabelWidget Name="TitleLabel" Text="" Margin="5, 5" HorizontalAlignment="Center"/>
                </CanvasWidget>
			</StackPanelWidget>
			<CanvasWidget Size="370, 420" Margin="15, 3">
				<RectangleWidget FillColor="255, 255, 255, 255" OutlineColor="20, 20, 20, 128" OutlineThickness="1" />
					<CanvasWidget HorizontalAlignment="Center" VerticalAlignment="Center">
						<StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" Margin="0, 0" >
                            <LabelWidget FontScale="0.8" Text="" HorizontalAlignment="Center" Color="64, 192, 64" DropShadow="true" />
					  	        <RectangleWidget Size="160, 210" OutlineColor="0, 0, 0, 0" HorizontalAlignment="Center" FillColor="255, 255, 255" Margin="0, 0" Subtexture="{HYKJTextures/QQ/QQQ}" />
					  	        <RectangleWidget Size="160, 210" OutlineColor="0, 0, 0, 0" HorizontalAlignment="Center" FillColor="255, 255, 255" Margin="0, 0" Subtexture="{HYKJTextures/QQ/PD}" />
			                <LabelWidget Name="ContentLabel" Text=""  Color="255,255,255" HorizontalAlignment="Center" TextAnchor="HorizontalCenter" WordWrap="true" />
			            </StackPanelWidget>
				    </CanvasWidget>
			    </CanvasWidget>
            <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <CanvasWidget Size="350, 35">
                    <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Far" VerticalAlignment="Far">
                        <BevelledButtonWidget Name="OkButton" Text="确定" Style="{Styles/ButtonStyle_40x20}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanelWidget>
                </CanvasWidget>
            </StackPanelWidget>
        </StackPanelWidget> 
	</CanvasWidget>
</CanvasWidget>

    <CanvasWidget xmlns="runtime-namespace:Game" Margin="0,10">

	<CanvasWidget Size="750, 420" HorizontalAlignment="Center" VerticalAlignment="Center">

		<BevelledRectangleWidget DirectionalLight="0" AmbientLight="1" BevelColor="120, 120, 120, 160" CenterColor="80, 80, 80, 25" BevelSize="3" RoundingRadius="10" RoundingCount="2" />

		<StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 5">

			<StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <CanvasWidget Size="700, 40" HorizontalAlignment="Center" VerticalAlignment="Center">
          <LabelWidget Name="TitleLabel" Text="" Margin="5, 5" HorizontalAlignment="Center"/>
        </CanvasWidget>
			</StackPanelWidget>

			<CanvasWidget Size="730, 335" Margin="20, 3">

				<BevelledRectangleWidget DirectionalLight="0" AmbientLight="1" BevelColor="255, 255, 255" CenterColor="20, 20, 20, 128" BevelSize="3" RoundingRadius="10" RoundingCount="2" />

				<ScrollPanelWidget Name="ScrollPanel" Direction="Vertical" Margin="3, 3" ClampToBounds="true">
					<CanvasWidget HorizontalAlignment="Center" VerticalAlignment="Center">
						<StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" Margin="10, 0" >
                            <LabelWidget Name="ContentLabel" Text="虚以待位"  Color="255,255,255" HorizontalAlignment="Center" TextAnchor="HorizontalCenter" WordWrap="true" />
						</StackPanelWidget>
					</CanvasWidget>
				</ScrollPanelWidget>

			</CanvasWidget>

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <CanvasWidget Size="700, 40">
          <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Near" VerticalAlignment="Far">
            <BevelledButtonWidget Name="OkButton" Text="确定" Style="{Styles/ButtonStyle_40x20}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
          </StackPanelWidget>
        </CanvasWidget>

      </StackPanelWidget>


    </StackPanelWidget>
    
	</CanvasWidget>

</CanvasWidget>
